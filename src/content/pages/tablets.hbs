<div class="container--margin__reset sp_products tablets">

  {{> header}}

  <div class="main grid_25">

    {{#each tablets.products}}
      <div class="grid_25 product product--tablet product--{{colour}}">
        <div class="product__details">
          <h2 class="product__title"><img src="{{title.image}}" alt="{{{title.text}}}"/></h2>
          <h3 class="product__tagline">{{{tagline}}}</h3>
          <h4 class="product__heading">Features</h4>
          <p class="product__desc">{{{description}}}</p>
          <h4 class="product__heading">Specification</h4>
          <ul class="product__spec">
            <div class="product__spec-col">
            {{#each specification}}
              {{#ifCond @index '==' 3}}
            </div>
            <div class="product__spec-col">
              {{/ifCond}}
              <li><span class="product__spec-label">{{{label}}}:</span> {{{val}}}</li>
            {{/each}}
            </div>
          </ul>
          <a class="sony-button" href="{{link}}">Find out more</a>
          <a class="sony-button" href="{{video}}">Watch the video</a>
        </div>
        <div class="product__image">
          <img src="{{image}}" alt="Image of {{{title.text}}}"/>
        </div>
      </div>
    {{/each}}

  </div>

</div>

<!-- scripts -->
<script type="text/javascript">

function initPage() {
  head.load(prefixURL + "js/fancybox/jquery.fancybox-1.3.4.css");
  head.load(prefixURL + "js/fancybox/jquery.fancybox-1.3.4.js", function(){

    $(".mpYouTube").click(function() {
      $.fancybox({
        'padding': 0,
        'autoScale': false,
        'transitionIn': 'none',
        'transitionOut' : 'none',
        'title': this.title,
        'width': 680,
        'height': 495,
        'href': this.href.replace(new RegExp("watch\\?v=", "i"), 'v/'),
        'type': 'swf',
        'swf': {
          'wmode': 'transparent',
          'allowfullscreen': 'true'
        }
      });

      return false;
    });

  });
}

</script>
