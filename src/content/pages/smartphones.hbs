<div class="smartphones grid_25 alpha omega">
  
  {{> header}}

  <div class="product-slider">
    <ul class="product-slider__slides js-product-slider">
      {{#each smartphones.products}}
        <li class="product-slide">
          <a href="#{{slugify title.text}}">
            <img class="product-slide__image" src="{{image}}" alt="Thumbnail of Xperia&trade; {{title.text}}"/>
          </a>
          <h3 class="product-slide__title">{{title.text}}</h3>
        </li>
      {{/each}}
    </ul>
  </div>

  {{#each smartphones.products}}
    {{partial 'product' this}}
  {{/each}}

  <div class="footnotes">
    {{#each smartphones.footnotes}}
    <p class="footnotes-item">{{{this}}}</p>
    {{/each}}
  </div>

</div>

<!-- scripts -->
<script type="text/javascript">

function initPage() {

  head.load(prefixURL + "js/fancybox/jquery.fancybox-1.3.4.css");
  head.load(prefixURL + "js/fancybox/jquery.fancybox-1.3.4.js", function() {
    $(".mpYouTube").click(function() {
      $.fancybox({
        'padding': 0,
        'autoScale': false,
        'transitionIn': 'none',
        'transitionOut': 'none',
        'title': this.title,
        'width': 680,
        'height': 495,
        'href': this.href.replace(new RegExp("watch\\?v=", "i"), 'v/'),
        'type': 'swf',
        'swf': {
          'wmode': 'transparent',
          'allowfullscreen': 'true'
        }
      });
      return false;
    });
  });

  head.load(prefixURL + "js/jquery.bxslider.js", function () {
    $('.js-product-slider').bxSlider({
      infiniteLoop: false,
      hideControlOnEnd: true,
      pager: false,
      minSlides: 1,
      maxSlides: 9,
      moveSlides: 1,
      slideWidth: 86,
      slideMargin: 10
    });
  });
}

</script>
