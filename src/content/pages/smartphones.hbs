<div class="sp_products container--margin__reset smartphones">
  
  {{> header}}

  <div class="grid_25 pslider">
    <ul class="product_bxslider">
      {{#each smartphones.products}}
      <li>
        <a href="#{{slugify title.text}}">
          <img height="80px" class="block" src="{{image}}" alt="Thumbnail of Xperia&trade; {{title.text}}"/>
        </a>
        <p class="bxSlider--text">{{title.text}}</p>
      </li>
      {{/each}}
    </ul>
  </div>

  <div class="main grid_25">

    {{#each smartphones.products}}
      <div id="{{slugify title.text}}" class="grid_25 product product--tablet product--{{colour}}">
        <div class="product__details">
          <h2 class="product__title"><img src="{{title.image}}" alt="Xperia&trade; {{{title.text}}}"/></h2>
          <h3 class="product__tagline">{{{tagline}}}</h3>
          <h4 class="product__heading">Features</h4>
          <p class="product__desc">{{{description}}}</p>
          <h4 class="product__heading">Specification</h4>
          <ul class="product__spec">
            <div class="product__spec-col">
            {{#each specification}}
              {{#ifHalfway @index ../specification}}
            </div>
            <div class="product__spec-col">
              {{/ifHalfway}}
              <li><span class="product__spec-label">{{{@key}}}:</span> {{{this}}}</li>
            {{/each}}
            </div>
          </ul>
          <a class="sony-button" href="{{link}}">Find out more</a>
          <a class="sony-button" href="{{video}}">Watch the video</a>
        </div>
        <div class="product__image">
          <img src="{{image}}" alt="Image of Xperia&trade; {{{title.text}}}"/>
        </div>
      </div>
    {{/each}}

    <div class="grid_23 prefix_1 suffix_1">
      <div class="footnotes">
        {{#each smartphones.footnotes}}
        <p class="footnotes-item">{{{this}}}</p>
        {{/each}}
      </div>
    </div>

  </div>

</div>

<!-- scripts -->
<script type="text/javascript">

function initPage() {

  head.load(prefixURL + "js/fancybox/jquery.fancybox-1.3.4.css");
  head.load(prefixURL + "js/fancybox/jquery.fancybox-1.3.4.js", function() {

    $(".mpYouTube").click(function() {
      $.fancybox({
        'padding': 0,
        'autoScale': false,
        'transitionIn': 'none',
        'transitionOut': 'none',
        'title': this.title,
        'width': 680,
        'height': 495,
        'href': this.href.replace(new RegExp("watch\\?v=", "i"), 'v/'),
        'type': 'swf',
        'swf': {
          'wmode': 'transparent',
          'allowfullscreen': 'true'
        }
      });
      return false;
    });
  });

  head.load(prefixURL + "js/jquery.bxslider.js", function () {
    $('.product_bxslider').bxSlider({
      mode: 'horizontal',
      infiniteLoop: false,
      pager: false,
      minSlides: 1,
      maxSlides: 8,
      startSlide: 0,
      moveSlides: 1,
      slideWidth: 86,
      slideMargin: 10
    });
  });
}

</script>
